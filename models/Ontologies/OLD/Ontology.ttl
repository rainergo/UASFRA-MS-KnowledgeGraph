<http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology> rdf:type owl:Ontology .

#################################################################
#    Object Properties
#################################################################

###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/hasDenominator
rainer:hasDenominator rdf:type owl:ObjectProperty ;
                      rdfs:subPropertyOf rainer:isRatio .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/hasNumerator
rainer:hasNumerator rdf:type owl:ObjectProperty ;
                    rdfs:subPropertyOf rainer:isRatio .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/isPublishedBy
rainer:isPublishedBy rdf:type owl:ObjectProperty .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/isRatio
rainer:isRatio rdf:type owl:ObjectProperty .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/publishes
rainer:publishes rdf:type owl:ObjectProperty .


#################################################################
#    Data properties
#################################################################

###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/BaselineValue
rainer:BaselineValue rdf:type owl:DatatypeProperty ;
                     rdfs:domain rainer:GHG ;
                     rdfs:range xsd:integer .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/BaselineYear
rainer:BaselineYear rdf:type owl:DatatypeProperty ;
                    rdfs:domain rainer:GHG ;
                    rdfs:range xsd:dateTime .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/EUR
rainer:EUR rdf:type owl:DatatypeProperty ;
           rdfs:domain rainer:FinancialImpact ;
           rdfs:range xsd:integer .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/LEI
rainer:LEI rdf:type owl:DatatypeProperty ;
           rdfs:domain rainer:Company ;
           rdfs:range xsd:string ;
           rdfs:comment "Legal Entity Identifier" .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/MWh
rainer:MWh rdf:type owl:DatatypeProperty ;
           rdfs:domain rainer:FromNonRenewableSources ,
                       rainer:FromRenewableSources ;
           rdfs:range xsd:integer .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/companyName
rainer:companyName rdf:type owl:DatatypeProperty ;
                   rdfs:domain rainer:Company ;
                   rdfs:range xsd:Name ;
                   rdfs:comment "Company name" .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/ratio
rainer:ratio rdf:type owl:DatatypeProperty ;
             rdfs:domain rainer:EnergyIntensity ,
                         rainer:GHGEmissionsIntensity ;
             rdfs:range xsd:float .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/reportingPeriod
rainer:reportingPeriod rdf:type owl:DatatypeProperty ;
                       rdfs:domain rainer:Report ;
                       rdfs:range xsd:dateTime .


###  http://www.semanticweb.org/rainer/ontologies/2023/10/Ontology/tonsCO2Equivalents
rainer:tonsCO2Equivalents rdf:type owl:DatatypeProperty ;
                          rdfs:domain rainer:GHGReductions ,
                                      rainer:Scope1 ,
                                      rainer:Scope2 ,
                                      rainer:Scope3 ,
                                      rainer:Total ;
                          rdfs:range xsd:integer .


#################################################################
